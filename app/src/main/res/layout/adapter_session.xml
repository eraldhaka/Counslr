<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="wrap_content"
            android:background="@drawable/profile_school"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView_title"
            app:layout_constraintBottom_toBottomOf="@+id/textView_description" android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desirae Herwitz"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/literata_book"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_profile"
            android:layout_marginStart="16dp" />
    <TextView
            android:text="Scheduled session\n45 min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_description"
            android:fontFamily="@font/red_hat_regular"
            android:textSize="16sp"
            android:textColor="@color/colorDark"
            app:layout_constraintStart_toEndOf="@+id/imageView_profile"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_title"/>
    <TextView
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/red_hat_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/textView_title"
            app:layout_constraintBottom_toBottomOf="@+id/textView_title"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>